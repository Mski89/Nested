{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "servicePlan": {
            "type": "object"
        }
    },
    "variables": {},
    "resources": [
        {
            "type": "Microsoft.Web/serverfarms",
            "apiVersion": "2018-02-01",
            "name": "[parameters('servicePlan').Config[copyIndex().Name]]",
            "location": "[resourceGroup().location]",
            "sku": {
                "name": "[parameters('servicePlan').Config[copyIndex()].SkuName]",
                "tier": "[parameters('servicePlan').Config[copyIndex()].tier]",
                "size": "[parameters('servicePlan').Config[copyIndex()].size]",
                "family": "[parameters('servicePlan').Config[copyIndex()].family]",
                "capacity": "[parameters('servicePlan').Config[copyIndex()].capacity]"
            },
            "kind": "[parameters('servicePlan').Config[copyIndex()].kind]",
            "properties": {
            },
            "copy": {
                "name": "PlanCopy",
                "count": "[length(parameters('servicePlan').Config)]"
            }            
        }
    ]
}
